---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const tutorials = await getCollection('tutorials');

const sortedTutorials = [...tutorials].sort((a, b) =>
    b.data.date.getTime() - a.data.date.getTime()
);

const videoTutorials = sortedTutorials.filter(tutorial => tutorial.data.type === 'video');
const writtenTutorials = sortedTutorials.filter(tutorial => tutorial.data.type === 'written');
---

<BaseLayout title="Tutorials - Shoelace Studios">
    <div class="tutorials-page">
        <header class="page-header">
            <h1>Tutorials</h1>
            <p class="description">Learn game development with our comprehensive tutorials</p>
        </header>

        <div class="tutorials-grid">
            <section class="tutorial-section">
                <h2>Video Tutorials</h2>
                <div class="tutorial-list">
                    {videoTutorials.map(tutorial => (
                            <a href={`/tutorials/${tutorial.slug}`} class="tutorial-card">
                                <div class="card-header">
                                <span class="difficulty" data-level={tutorial.data.difficulty.toLowerCase()}>
                                    {tutorial.data.difficulty}
                                </span>
                                    <span class="duration">{tutorial.data.estimated_time} min</span>
                                </div>
                                <h3>{tutorial.data.title}</h3>
                                <p>{tutorial.data.description}</p>
                            </a>
                    ))}
                </div>
            </section>

            <section class="tutorial-section">
                <h2>Written Tutorials</h2>
                <div class="tutorial-list">
                    {writtenTutorials.map(tutorial => (
                            <a href={`/tutorials/${tutorial.slug}`} class="tutorial-card">
                                <div class="card-header">
                                <span class="difficulty" data-level={tutorial.data.difficulty.toLowerCase()}>
                                    {tutorial.data.difficulty}
                                </span>
                                    <span class="duration">{tutorial.data.estimated_time} min</span>
                                </div>
                                <h3>{tutorial.data.title}</h3>
                                <p>{tutorial.data.description}</p>
                            </a>
                    ))}
                </div>
            </section>
        </div>
    </div>
</BaseLayout>

<style>
    .tutorials-page {
        max-width: 72rem;
        margin: 0 auto;
        padding: 2rem 1rem;
    }

    .page-header {
        text-align: center;
        margin-bottom: 3rem;
    }

    h1 {
        font-size: 3rem;
        color: white;
        margin-bottom: 1rem;
    }

    .description {
        color: rgb(209, 213, 219);
        font-size: 1.25rem;
    }

    .tutorial-section {
        margin-bottom: 3rem;
    }

    .tutorial-section h2 {
        color: rgb(245, 100, 32);
        font-size: 2rem;
        margin-bottom: 1.5rem;
    }

    .tutorial-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
    }

    .tutorial-card {
        background: rgba(22, 34, 42, 0.95);
        border-radius: 0.5rem;
        padding: 1.5rem;
        text-decoration: none;
        transition: transform 0.2s;
    }

    .tutorial-card:hover {
        transform: translateY(-4px);
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        margin-bottom: 1rem;
    }

    .difficulty {
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.875rem;
    }

    .difficulty[data-level="beginner"] {
        background-color: rgba(34, 197, 94, 0.2);
        color: rgb(34, 197, 94);
    }

    .difficulty[data-level="intermediate"] {
        background-color: rgba(245, 158, 11, 0.2);
        color: rgb(245, 158, 11);
    }

    .difficulty[data-level="advanced"] {
        background-color: rgba(239, 68, 68, 0.2);
        color: rgb(239, 68, 68);
    }

    .duration {
        color: rgb(209, 213, 219);
        font-size: 0.875rem;
    }

    .tutorial-card h3 {
        color: white;
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
    }

    .tutorial-card p {
        color: rgb(209, 213, 219);
        font-size: 0.875rem;
        line-height: 1.5;
    }

    @media (max-width: 768px) {
        .tutorial-list {
            grid-template-columns: 1fr;
        }
    }
</style>